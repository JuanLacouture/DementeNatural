<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".Registro">

    <!-- Logo de Dementenatural -->
    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="268dp"
        android:layout_height="223dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/dementenaturallogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título Registro -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Registro"
        android:textColor="@color/dark_brown"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageLogo" />

    <!-- Campo de correo electrónico -->
    <EditText
        android:id="@+id/editEmail"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_border"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle" />

    <!-- Campo de contraseña -->
    <EditText
        android:id="@+id/editPassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_border"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/editEmail"
        app:layout_constraintStart_toStartOf="@id/editEmail"
        app:layout_constraintTop_toBottomOf="@id/editEmail" />

    <!-- Container para Rol -->
    <FrameLayout
        android:id="@+id/containerRol"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_border"
        app:layout_constraintEnd_toEndOf="@id/editPassword"
        app:layout_constraintStart_toStartOf="@id/editPassword"
        app:layout_constraintTop_toBottomOf="@id/editPassword">

        <!-- Spinner con estilo personalizado -->
        <Spinner
            android:id="@+id/spinnerRol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:spinnerMode="dropdown" />

        <!-- Flecha del dropdown -->
        <ImageView
            android:id="@+id/imageRolArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/dropdown_arrow"
            app:tint="@color/gold" />

    </FrameLayout>

    <!-- Container para Sede -->
    <FrameLayout
        android:id="@+id/containerSede"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_border"
        app:layout_constraintEnd_toEndOf="@id/containerRol"
        app:layout_constraintStart_toStartOf="@id/containerRol"
        app:layout_constraintTop_toBottomOf="@id/containerRol">

        <!-- Spinner con estilo personalizado -->
        <Spinner
            android:id="@+id/spinnerSede"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:spinnerMode="dropdown" />

        <!-- Flecha del dropdown -->
        <ImageView
            android:id="@+id/imageSedeArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/dropdown_arrow"
            app:tint="@color/gold" />

    </FrameLayout>

    <!-- Botón Registrar -->
    <Button
        android:id="@+id/buttonRegistrar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/gold"
        android:text="Registrar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="@id/containerSede"
        app:layout_constraintStart_toStartOf="@id/containerSede"
        app:layout_constraintTop_toBottomOf="@id/containerSede" />

    <!-- Línea inferior -->

</androidx.constraintlayout.widget.ConstraintLayout>