                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product3Price" />

            <TextView
                android:id="@+id/product4Price"
                android:layout_width="wrap_content"
